<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net47</TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' != 'Windows_NT'">netcoreapp2.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/WickedFlame/Polaroider</RepositoryUrl>
    <Authors>Christian Walpen</Authors>
    <Company>WickedFlame</Company>
    <Description>Automated Snapshottesting for .NET</Description>
    <Copyright>@WickedFlame 2020</Copyright>
    <PackageTags>Snapshot, Snapshottesting, Test</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <Version>1.1.1-RC02</Version>
    <AssemblyVersion>1.1.1</AssemblyVersion>
    <FileVersion>1.1.1-RC02</FileVersion>
    <PackageVersion>1.1.1-RC02</PackageVersion>
    <Title>Polaroider</Title>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageProjectUrl>http://wickedflame.github.io/Polaroider</PackageProjectUrl>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Polaroider.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\Polaroider.xml</DocumentationFile>
  </PropertyGroup>

</Project>
