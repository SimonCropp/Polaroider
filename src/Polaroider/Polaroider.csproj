    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>

    <Authors>Christian Walpen</Authors>
    <Company>WickedFlame</Company>
    <Description>Automated Snapshottesting for .NET</Description>
    <Copyright>@WickedFlame 2020</Copyright>
    <PackageTags>Snapshot, Snapshottesting, Test</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Title>Polaroider</Title>
    <PackageProjectUrl>http://wickedflame.github.io/</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\Polaroider.xml</DocumentationFile>
